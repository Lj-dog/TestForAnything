<Window
    x:Class="WpfDialogInputFilesInFolder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDialogInputFilesInFolder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <ListView x:Name="showFiles" Height="150" />
        <StackPanel>
            <Button Click="inputFiles" Content="OpenFileDialog " />
        </StackPanel>
        <StackPanel>
            <Button Click="CustomizeDialog" Content="OpenFileDialog " />
        </StackPanel>
        <StackPanel>
            <Button Click="FilesDialog" Content="OpenFileDialog " />
        </StackPanel>
        <StackPanel>
            <Button Click="FileFolderDialog" Content="OpenFileFolderDialog " />
        </StackPanel>
    </StackPanel>
</Window>
