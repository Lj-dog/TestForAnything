<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:WpfAppTemplate.Models">
    <DataTemplate x:Key="male" DataType="{x:Type m:People}">
        <Border
            x:Name="border"
            Padding="5"
            BorderBrush="Blue"
            BorderThickness="5"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="txtName"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Black"
                    Foreground="Black"
                    Text="{Binding}" />
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Gender}" />
                    <TextBlock Text="{Binding Age}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Polygon
                        Fill="LightBlue"
                        Points="20,40 0,5 40,5"
                        Stroke="Blue"
                        StrokeThickness="2" />
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="female" DataType="{x:Type m:People}">
        <Border
            x:Name="border"
            Padding="5"
            BorderBrush="Blue"
            BorderThickness="5"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="txtName"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Black"
                    Foreground="Black"
                    Text="{Binding}" />
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Gender}" />
                    <TextBlock Text="{Binding Age}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Polygon
                        Fill="Pink"
                        Points="20,5 0,40 40,40"
                        Stroke="Red"
                        StrokeThickness="2" />
                </StackPanel>
            </Grid>
        </Border>

    </DataTemplate>

    <DataTemplate x:Key="lgbtqia_plus" DataType="{x:Type m:People}">
        <Border
            x:Name="border"
            Padding="5"
            BorderBrush="Blue"
            BorderThickness="5"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="txtName"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Black"
                    Foreground="Black"
                    Text="{Binding}" />
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Name}" />
                    <TextBlock Text="{Binding Gender}" />
                    <TextBlock Text="{Binding Age}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Path Stroke="Black" StrokeThickness="2">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint=".5,1">
                                <GradientStop Offset="0" Color="Red" />
                                <GradientStop Offset="0.17" Color="Orange" />
                                <GradientStop Offset="0.33" Color="Yellow" />
                                <GradientStop Offset="0.5" Color="Green" />
                                <GradientStop Offset="0.67" Color="Blue" />
                                <GradientStop Offset="0.83" Color="Indigo" />
                                <GradientStop Offset="1" Color="Violet" />
                            </LinearGradientBrush>
                        </Path.Fill>
                        <Path.Data>
                            <EllipseGeometry
                                Center="20,25"
                                RadiusX="20"
                                RadiusY="20" />
                        </Path.Data>
                    </Path>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>