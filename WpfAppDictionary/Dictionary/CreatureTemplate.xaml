<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:WpfAppTemplate.Models">

    <DataTemplate DataType="{x:Type m:Creature}">
        <Border
            x:Name="border"
            Padding="5"
            BorderBrush="Blue"
            BorderThickness="5"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="txtName"
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Black"
                    Foreground="Black"
                    Text="{Binding}" />
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Gender}" />
                    <TextBlock Text="{Binding Age}" />
                </StackPanel>
            </Grid>
        </Border>

    </DataTemplate>
</ResourceDictionary>