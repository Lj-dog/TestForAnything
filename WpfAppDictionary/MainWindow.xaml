<Window
    x:Class="WpfAppDictionary.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:My="clr-namespace:WpfAppDictionary.MyControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfAppDictionary"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                Width="120"
                Height="50"
                Click="Button_Click"
                Content="Btn1" />
            <Button
                Width="120"
                Height="50"
                Content="Btn2" />
            <Button
                Width="120"
                Height="50"
                Content="Btn3" />
            <My:MyTextbox
                Width="120"
                Height="50"
                Background="LightYellow"
                BorderBrush="Blue"
                BorderThickness="5"
                MyTextBoxCornerRadius="5"
                Style="{StaticResource textbox}" />
        </StackPanel>
    </Grid>
</Window>
