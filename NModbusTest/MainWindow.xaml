<Window
    x:Class="NModbusTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NModbusTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBox
                    x:Name="IP"
                    Width="120"
                    Height="30"
                    Margin="5" Text="127.0.0.1" />
                <Button
                    x:Name="Connect"
                    Width="120"
                    Height="25"
                    Margin="5"
                    Content="连接" Click="Connect_Click" />
                <Button
                    x:Name="Disconnect"
                    Width="120"
                    Height="25"
                    Margin="5"
                    Content="断开" Click="Disconnect_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>