<Window
    x:Class="WpfAppMVVMTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WpfAppMVVMTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WpfAppMVVMTest.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:DataGridVM}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <CollectionViewSource x:Key="view" Filter="CollectionViewSource_Filter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>
        <DataGrid
            x:Name="dataGrid"
            ItemsSource="{Binding Peoples, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedPeople}" />
        <Grid Grid.Row="1">
            <StackPanel>
                <StackPanel
                    Height="auto"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Margin="5,0" Text="Name:" />
                    <TextBox
                        Width="100"
                        Style="{x:Null}"
                        Text="{Binding People.Name}" />

                    <TextBlock Margin="5,0" Text="ID:" />
                    <TextBox Width="100" Text="{Binding People.ID}" />
                    <TextBlock Margin="5,0" Text="Age:" />
                    <TextBox Width="100" Text="{Binding People.Age}" />

                    <TextBlock Margin="5,0" Text="BirthDay:" />
                    <TextBox Width="100" Text="{Binding People.BirthDay}" />



                </StackPanel>
                <StackPanel
                    Height="auto"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Margin="5,0" Text="Address:" />
                    <TextBox Width="100" Text="{Binding People.Address}" />

                    <TextBlock Margin="5,0" Text="Description:" />
                    <TextBox Width="100" Text="{Binding People.Description}" />
                </StackPanel>
                <StackPanel
                    Height="auto"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Margin="5,0"
                        Command="{Binding BtnAddCommand}"
                        Content="Add" />
                    <Button
                        Width="100"
                        Margin="5,0"
                        Command="{Binding BtnRemoveCommand}"
                        CommandParameter="{Binding ElementName=dataGrid, Path=SelectedItems}"
                        Content="Del" />
                    <Button
                        Width="auto"
                        Margin="5,0"
                        Command="{Binding BtnAddCommand}"
                        Content="Enable Description Edit" />
                    <Button
                        Width="auto"
                        Margin="5,0"
                        Command="{Binding BtnRemoveCommand}"
                        Content="Disable Description Edit" />
                </StackPanel>

            </StackPanel>
        </Grid>
        <DockPanel Grid.Row="2">
            <DockPanel.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries />
                </ResourceDictionary>
            </DockPanel.Resources>
            <StackPanel
                Margin="5"
                DockPanel.Dock="Bottom"
                Orientation="Horizontal">
                <Button Click="NewEmployee_Click" Content="New Employee" />
                <hc:TextBox
                    x:Name="filterTextBox"
                    Width="200"
                    Margin="5,0,0,0"
                    hc:InfoElement.Placeholder="Filter data by name"
                    InputMethod.IsInputMethodEnabled="False"
                    TextChanged="filterTextBox_TextChanged" />
            </StackPanel>
            <DataGrid
                x:Name="employeeDataGrid"
                d:ItemsSource="{d:SampleData ItemCount=10}"
                AutoGenerateColumns="False"
                CanUserDeleteRows="True"
                ItemsSource="{Binding Source={StaticResource view}}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="ID" />
                    <DataGridTextColumn Binding="{Binding FirstName}" Header="FirstName" />
                    <DataGridTextColumn Binding="{Binding LastName}" Header="LastName" />
                    <DataGridTextColumn Binding="{Binding Birthday}" Header="Birthday" />
                    <DataGridTextColumn Binding="{Binding Salary}" Header="Salary" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <Grid Grid.Row="3">
            <Grid.DataContext>
                <vm:RadioVM />
            </Grid.DataContext>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding Changedchecked1Command}" Content="Check1" />
                    <RadioButton
                        VerticalAlignment="Center"
                        Content="Check1"
                        IsChecked="{Binding Checked1, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding Changedchecked2Command}" Content="Check2" />
                    <RadioButton Content="Check2" IsChecked="{Binding Checked2, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
