<Window
    x:Class="NotifyIcon_托盘图标.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:NotifyIcon_托盘图标.Utils.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:NotifyIcon_托盘图标"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:MainVM}"
    Closed="WinClosed"
    Closing="WinClosing"
    Loaded="WinLoaded"
    mc:Ignorable="d">
    <Window.Resources>
        <con:BooleanConverter x:Key="boolInvert" />
    </Window.Resources>
    <Grid>
        <UniformGrid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Columns="1">
            <CheckBox
                VerticalAlignment="Center"
                Content="开机最小化到托盘"
                IsChecked="{Binding MinInIconWhenStart}" />
            <GroupBox Header="关闭时行为">
                <UniformGrid Columns="1">
                    <RadioButton
                        VerticalAlignment="Center"
                        Content="每次询问"
                        IsChecked="{Binding AskIsMinInIconWhenClose}" />
                    <GroupBox>
                        <GroupBox.Header>
                            <RadioButton
                                x:Name="rb"
                                Content="默认"
                                IsChecked="{Binding AskIsMinInIconWhenClose, Converter={StaticResource boolInvert}, Mode=TwoWay}" />
                        </GroupBox.Header>
                        <StackPanel>
                            <RadioButton
                                Content="最小化"
                                IsChecked="{Binding IsMinimize}"
                                IsEnabled="{Binding ElementName=rb, Path=IsChecked}" />
                            <RadioButton
                                Content="直接关闭"
                                IsChecked="{Binding IsMinimize, Mode=OneWay, Converter={StaticResource boolInvert}}"
                                IsEnabled="{Binding ElementName=rb, Path=IsChecked}" />
                        </StackPanel>
                    </GroupBox>
                </UniformGrid>

            </GroupBox>

            <!--<Button x:Name="btn" />-->
        </UniformGrid>
    </Grid>
</Window>
