<Page
    x:Class="WpfApp_Navigation.NavigationWinPages.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp_Navigation.NavigationWinPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="[vm ]clr-namespace:WpfApp_Navigation.VMs"
    Title="Page1"
    d:DataContext="{d:DesignInstance Type=vm:Page1VM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Yellow"
    Focusable="True"
    Loaded="Page1_Loaded"
    mc:Ignorable="d">
    <Page.InputBindings>
        <!--<KeyBinding
            Key="S"
            Command="{Binding KeyBingCommand}"
            Modifiers="Ctrl" />-->
        <KeyBinding Command="{Binding KeyBingCommand}" Gesture="Ctrl+S" />
    </Page.InputBindings>
    <Page.Resources>
        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <Style.Setters>
                <Setter Property="Width" Value="120" />
                <Setter Property="Height" Value="60" />
            </Style.Setters>
        </Style>
    </Page.Resources>
    <Grid>
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="60"
            Text="Page1" />
        <StackPanel VerticalAlignment="Center">
            <Button
                Background="Green"
                Click="Next_Click"
                Content="Next" />
            <Button Click="Forward_Click" Content="GoForward" />
        </StackPanel>
    </Grid>
</Page>
